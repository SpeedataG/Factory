<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <com.spdata.factory.view.CustomTitlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        style="@style/main_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:background="#cec7c7"
            android:id="@+id/btn_up"
            android:text="VOLUME_UP"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="10dp"
            android:background="#cec7c7"
            android:id="@+id/btn_down"
            android:text="VOLUME_DOWN"
            android:layout_below="@+id/btn_up"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <Button
            android:background="#cec7c7"
            android:visibility="gone"
            android:id="@+id/btn_close"
            android:layout_alignParentRight="true"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <Button
            android:visibility="gone"
            android:text="HOME"
            android:id="@+id/btn_home"
            android:layout_below="@+id/btn_left_F4"
            android:layout_marginLeft="70dp"
            android:layout_width="130dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content" />

        <Button
            android:background="#cec7c7"
            android:text="SCAN"
            android:id="@+id/btn_left_F4"
            android:layout_marginTop="23dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_down"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:background="#cec7c7"
            android:text="SCAN"
            android:id="@+id/btn_right_F4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_left_F4"
            android:layout_alignBottom="@+id/btn_left_F4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pass"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_item_blue"
            android:text="成功"
            android:textColor="@color/text_white"
            android:textSize="@dimen/commom_textsize"/>

        <Button
            android:id="@+id/btn_not_pass"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_item_blue"
            android:text="失败"
            android:textColor="@color/text_white"
            android:textSize="@dimen/commom_textsize"/>
    </LinearLayout>


</LinearLayout>
