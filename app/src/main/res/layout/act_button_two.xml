<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="1">
    <com.spdata.factory.view.CustomTitlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        style="@style/main_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.40"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_infor"
            android:layout_width="fill_parent"
            android:text="@string/btn_two_tv1"
            style="@style/base_text"
            android:layout_height="200dp"/>

        <Button
            android:background="#cec7c7"
            android:id="@+id/btn_dwon"
            android:text="VOL_DOWN"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:background="#cec7c7"
            android:id="@+id/btn_vol_fn"
            android:text="FN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_alignBottom="@+id/tv_infor"
            android:layout_alignLeft="@+id/btn_ok"
            android:layout_alignStart="@+id/btn_ok"
            android:layout_below="@+id/tv_infor" />

        <Button
            android:background="#cec7c7"
            android:id="@+id/btn_vol_up"
            android:text="vol_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_vol_fn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:background="#cec7c7"
            android:id="@+id/btn_fn"
            android:text="FN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/btn_vol_fn"
            android:layout_alignLeft="@+id/btn_camera"
            android:layout_alignStart="@+id/btn_camera" />

        <Button
            android:background="#cec7c7"
            android:id="@+id/btn_ok"
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_alignBaseline="@+id/btn_dwon"
            android:layout_alignBottom="@+id/btn_dwon"
            android:layout_toRightOf="@+id/btn_dwon"
            android:layout_toEndOf="@+id/btn_dwon" />

        <Button
            android:background="#cec7c7"
            android:id="@+id/btn_camera"
            android:text="Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_fn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/selector_item_blue"
            android:text="@string/btn_success"
            android:textColor="@color/text_white"
            android:textSize="@dimen/commom_textsize" />

        <Button
            android:id="@+id/btn_not_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_item_blue"
            android:text="@string/btn_fail"
            android:textColor="@color/text_white"
            android:textSize="@dimen/commom_textsize" />
    </LinearLayout>


</LinearLayout>
